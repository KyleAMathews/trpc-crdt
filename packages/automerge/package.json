{
  "name": "trpc-automerge",
  "description": "Call server functions natively in your automerge app with tRPC",
  "version": "0.0.11",
  "author": "Peter van Hardenberg <pvh@pvh.ca>",
  "devDependencies": {
    "@trpc/client": "^10.38.5",
    "@trpc/server": "^10.38.5",
    "@automerge/automerge-repo": "^1.0.12"
  },
  "exports": {
    "./adapter": "./dist/adapter.js",
    "./link": "./dist/link.js"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "keywords": [],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@trpc/client": "*",
    "@trpc/server": "*",
    "@automerge/automerge-repo": "*"
  },
  "scripts": {
    "build": "npm run clean && tsup && npm run post-build",
    "check": "tsc",
    "clean": "shx rm -rf dist *.d.ts",
    "post-build": "shx mv dist/*.d.ts* .",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "tsup": {
    "entry": [
      "src/adapter.ts",
      "src/link.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true
  },
  "dependencies": {
    "@automerge/automerge-repo": "^1.0.13",
    "@automerge/automerge-repo-network-broadcastchannel": "^1.0.13",
    "@automerge/automerge-repo-network-websocket": "^1.0.16",
    "@automerge/automerge-repo-react-hooks": "^1.0.16"
  }
}
